<section class="section">
  <div class="columns">
    <div class="column is-4 is-offset-4">
      <h3 class="title is-2"><%= username %></h3>
      <div class="field">
        <label class="label">Handmades I have added</label>
        <div class="control has-icons-left has-icons-right">
          <% addedHandmades.forEach(handmade => { %>
            <a href="/handmades/<%= handmade.id %>">
            <p><strong><%= handmade.name %></strong></p>
            </a>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
</section>
