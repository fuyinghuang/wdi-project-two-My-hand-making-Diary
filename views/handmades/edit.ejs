<section class="section">
  <div class="columns">
    <div class="column is-4 is-offset-4">
    <h2 class="title is-2">Edit Hand-made</h2>
    <form action="/handmades/<%= _id %>?_method=PUT" method="post">
        <div class="field">
          <label class="label" for="name">My hand-made</label>
          <div class="control has-icons-left has-icons-right">
            <input class="input is-rounded is-normall font" type="text" name="name"  value="<%= name%>">
          </div>
        </div>
        <div class="field">
          <label class="label" for="tools">Tools</label>
          <div class="control">
          <input class="input is-rounded is-normall font" type="text" name="tools"  value="<%= tools%>">
          </div>
        </div>
        <div class="field">
          <label class="label" for="material">Materials</label>
          <div class="control">
            <input class="input is-rounded is-normall font" type="text" name="materials" value="<%= materials%>">
          </div>
        </div>
        <div class="field">
          <label class="label" for="material" for="image">Image (URL)</label>
          <div class="control">
            <input class="input is-rounded is-normall font" type="text" name="image" value="<%= image%>">
          </div>
        </div>
        <div class="field">
          <label class="label" for="material" for="concept">Concept</label>
          <div class="control">
            <input class="input is-rounded is-large font" type="text" name="concept" value="<%= concept%>">
          </div>
        </div>
        <div class="field is-grouped">
          <div class="control">
            <button class="button is-rounded is-dark">Edit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
